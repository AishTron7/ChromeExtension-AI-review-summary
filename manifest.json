{
    "manifest_version": 3,
    "name": "ReviewGPT - AI Summarizes Product-Reviews",
    "version": "2.0.0",
    "description": "Summarizes product reviews on Amazon & Flipkart using OpenAI's GPT model",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.flipkart.com/*",
                "*://*.amazon.com/*",
                "*://*.amazon.in/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}